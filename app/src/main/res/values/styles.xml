<resources>
    <!-- region Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- endregion -->

    <!-- region Splash screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/theme_background</item>
    </style>
    <!-- endregion -->

    <!-- region Webview screen theme -->
    <style name="WebviewTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- endregion -->

    <!-- region General -->
    <style name="microRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">31dp</item>
    </style>
    <style name="smallRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>
    <style name="bigRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">90dp</item>
    </style>
    <!-- endregion -->

    <!-- region Error alert dialog -->
    <style name="customErrorAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:background">@color/colorErrorDialogBackground</item>
        <item name="buttonBarNegativeButtonStyle">@style/ErrorNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ErrorPositiveButtonStyle</item>
    </style>

    <style name="ErrorNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="ErrorPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorError</item>
    </style>
    <!-- endregion -->
</resources>