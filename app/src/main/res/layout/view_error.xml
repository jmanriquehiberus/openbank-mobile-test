<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_error_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:textSize="@dimen/huge_text_size"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/error_default_message" />

    <TextView
        android:id="@+id/tv_error_view_message_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_spacing"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"/>

    <Button
        android:id="@+id/bt_error_view_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:padding="@dimen/forms_big_button_padding"
        android:textSize="@dimen/big_text_size"
        android:fontFamily="sans-serif-light"
        android:text="@string/retry"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>

</merge>