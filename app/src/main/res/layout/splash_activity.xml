<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".splash.SplashActivity"
    android:id="@+id/l_splash_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_background">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_pound"
            android:layout_width="@dimen/splash_activity_pound_width"
            android:layout_height="@dimen/splash_activity_pound_height"
            android:src="@drawable/ic_pound"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:tint="@android:color/darker_gray"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/splash_activity_title_width"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="@string/splash_screen_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/huge_text_size"
            android:fontFamily="sans-serif-light"/>

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>